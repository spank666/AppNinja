<maui:MauiWinUIApplication
    x:Class="MoneyTransfer.WinUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:maui="using:Microsoft.Maui">
    <maui:MauiWinUIApplication.Resources>
        <ResourceDictionary>

            <!-- ELIMINA COMPLETAMENTE EL ESTILO POR DEFECTO DEL ENTRY EN WINDOWS -->
            <Style TargetType="TextBox">
                <!-- Quita el borde gris por defecto -->
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="BorderBrush" Value="Transparent" />
                <Setter Property="Background" Value="Transparent" />

                <!-- Quita el fondo blanco al hacer foco -->
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Foreground" Value="{Binding TextColor, RelativeSource={RelativeSource Self}}" />

                <!-- Quita el cursor azul feo y lo deja transparente -->
                <!--
                <Setter Property="SelectionHighlightColor" Value="Transparent" />
                -->

                <!-- Quita el fondo al enfocar (el más importante) -->
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Grid>
                                <Border Background="Transparent" />
                                <ScrollViewer x:Name="ContentElement"
                                              Margin="{TemplateBinding Padding}"
                                              Background="Transparent" />
                                <TextBlock x:Name="PlaceholderText"
                                           Text="{TemplateBinding PlaceholderText}"
                                           Foreground="{TemplateBinding PlaceholderForeground}"
                                           Margin="{TemplateBinding Padding}"
                                           IsHitTestVisible="False"
                                           Opacity="0.6" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- También quita el estilo del PasswordBox si usas IsPassword -->
            <Style TargetType="PasswordBox">
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="PasswordBox">
                            <Grid>
                                <Border Background="Transparent" />
                                <ScrollViewer x:Name="ContentElement" Background="Transparent" />
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

        </ResourceDictionary>
    </maui:MauiWinUIApplication.Resources>
</maui:MauiWinUIApplication>
